// Prisma Schema for KU Smart Management System (KUSMS)
// Database: SQLite (for testing - will use PostgreSQL in production)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Models
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  role      String   @default("STUDENT") // STUDENT, FACULTY, ADMIN, MAINTENANCE
  department String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  bookings            Booking[]
  events              Event[]
  maintenanceRequests MaintenanceRequest[] @relation("RequestCreator")
  assignedRequests    MaintenanceRequest[] @relation("MaintenanceAssignee")

  @@index([email])
  @@index([role])
}

model Facility {
  id          String   @id @default(uuid())
  name        String
  type        String   // e.g., "CLASSROOM", "LAB", "SPORTS", "AUDITORIUM"
  capacity    Int?
  location    String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  bookings            Booking[]
  events              Event[]
  maintenanceRequests MaintenanceRequest[]

  @@index([type])
  @@index([name])
}

model Booking {
  id         String   @id @default(uuid())
  userId     String
  facilityId String
  startTime  DateTime
  endTime    DateTime
  purpose    String
  status     String   @default("PENDING") // PENDING, APPROVED, REJECTED, CANCELLED
  adminNotes String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  facility Facility @relation(fields: [facilityId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([facilityId])
  @@index([startTime])
  @@index([status])
  @@index([facilityId, startTime])
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  location    String?
  facilityId  String?
  creatorId   String
  status      String   @default("DRAFT") // DRAFT, PENDING, APPROVED, PUBLISHED, REJECTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  creator  User      @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  facility Facility? @relation(fields: [facilityId], references: [id], onDelete: SetNull)

  @@index([creatorId])
  @@index([startTime])
  @@index([status])
  @@index([facilityId])
}

model MaintenanceRequest {
  id          String   @id @default(uuid())
  userId      String
  facilityId  String
  description String
  status      String   @default("PENDING") // PENDING, IN_PROGRESS, ON_HOLD, COMPLETED
  assignedTo  String?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user           User     @relation("RequestCreator", fields: [userId], references: [id], onDelete: Cascade)
  facility       Facility @relation(fields: [facilityId], references: [id], onDelete: Cascade)
  assignedStaff  User?    @relation("MaintenanceAssignee", fields: [assignedTo], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([facilityId])
  @@index([assignedTo])
  @@index([status])
}
